<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MainHeaderStyle">
        <item name="android:fontFamily">@font/acme</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">38sp</item>
        <item name="android:textColor">#2C2B47</item>
    </style>

    <style name="start_input_style">
        <item name="android:background">@drawable/ic_rectangle</item>
        <item name="android:fontFamily">@font/acme</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:textColorHint">#2C2B47</item>
    </style>

    <style name="money_style">
        <item name="android:fontFamily">@font/acme</item>
        <item name="android:textColor">#2C2B47</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="per_month_style">
        <item name="android:textColor">#B9B8C6</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="faded_money_style">
        <item name="android:textColorHint">#87869E</item>
