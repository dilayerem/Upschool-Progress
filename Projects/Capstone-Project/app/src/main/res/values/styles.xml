<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="GeneralButton">
        <item name="android:layout_width">380dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:backgroundTint">#DB3022</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="OrStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">100dp</item>
        <item name="android:textColor">#222222</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="clock">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:layout_marginEnd">300dp</item>
        <item name="android:fontFamily">@font/aldrich</item>
    </style>

    <style name="Title">
        <item name="android:fontFamily">@font/anaheim</item>
        <item name="android:textColor">#222222</item>
        <item name="android:textSize">34sp</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>